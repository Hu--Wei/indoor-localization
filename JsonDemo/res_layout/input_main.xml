<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/et_serverip2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Server IP, eg.:101.5.155.101" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_wifi"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_button"
                android:padding="10dp"
                android:text="UPLOAD"
                android:textColor="#ffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ProgressBar
                android:id="@+id/bar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/wifi_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_span="3"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#0B3861"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|left" >

            <TextView
                android:id="@+id/TextViewGetPosition"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="18dip"
                android:text="Position: "
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editPosition"
                android:layout_width="20dp"
                android:layout_toRightOf="@+id/TextViewGetPosition"
                android:layout_weight="1"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/TextViewX"
                android:layout_width="0px"
                android:layout_weight="1"
                android:padding="18dip"
                android:text="X: "
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editX"
                android:layout_width="0px"
                android:layout_weight="1"
                android:padding="18dip"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TextViewY"
                android:layout_width="0px"
                android:layout_weight="1"
                android:padding="18dip"
                android:text="Y: "
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editY"
                android:layout_width="0px"
                android:layout_weight="1"
                android:padding="18dip"
                android:text=""
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_train"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:padding="10dp"
                android:text="Upload finished"
                android:textColor="#ffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:text="" />
        </TableRow>
    </TableLayout>

</ScrollView>