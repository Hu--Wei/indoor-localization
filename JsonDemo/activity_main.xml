<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fadingEdge="vertical"> 
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_wifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/et_hello"
                android:layout_span="3"
                android:text="上传" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/wifi_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_marginTop="20dp"
                android:layout_span="3"
                android:background="#eee"
                android:gravity="center_horizontal"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:text="下面要显示wifi信息"
                android:textSize="14sp" />
        </TableRow>

		<TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/et_serverip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:hint="Server IP, eg.:101.5.155.101" />
        </TableRow>
		
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/TextViewGetPosition"
                android:layout_width="fill_parent"
                android:background="#cccccc"
                android:padding="18dip"
                android:text="房间"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editPosition"
                android:layout_width="fill_parent"
                android:padding="18dip"
                android:text=""
                android:textColor="#000"
                android:textSize="14sp" />
        </TableRow>
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/TextViewX"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="#777777"
                android:padding="18dip"
                android:text="X "
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editX"
                android:layout_width="0px"
                android:layout_weight="1"
                android:padding="18dip"
                android:text=""
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TextViewY"
                android:layout_width="0px"
                android:layout_weight="1"
                android:background="#777777"
                android:padding="18dip"
                android:text="Y"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editY"
                android:layout_width="0px"
                android:layout_weight="1"
                android:padding="18dip"
                android:text=""
                android:textColor="#000"
                android:textSize="14sp" />
            </TableRow>
        
        
        <!--  <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <EditText
                android:id="@+id/et_hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:hint="输入姓名查询数据库" />
        </TableRow>-->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_hello"
                android:layout_span="3"
                android:text="查询" />
        </TableRow> 

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" > 

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_marginTop="20dp"
                android:layout_span="3"
                android:background="#eee"
                android:gravity="center_horizontal"
                android:text="下面要显示服务器的返回值"
                android:textSize="14sp" />
        </TableRow> 
        
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_train"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:text="测试" />
        </TableRow>
        
        <ImageView 
			   android:id="@+id/img_map"
			   android:src="@drawable/map"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   />
    </TableLayout>
</ScrollView> 